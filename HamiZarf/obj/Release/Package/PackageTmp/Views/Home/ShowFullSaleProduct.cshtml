<div class="shop-area">
    <div class="container">
        <div class="row">
            <!-- left-sidebar start -->
           
            <!-- left-sidebar end -->
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="shop-content">
                    <!-- Nav tabs -->
          

                    <div class="clear"></div>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="home">
                            <div class="row">
                                <style>
                                    .k {
                                        width: 370px;
                                        height: 260px;
                                    }

                                    .kk {
                                        width: 250px;
                                        height: 180px;
                                    }
                                </style>
                                <!-- single-product start -->
                                @foreach (var item in ViewBag.ShowFullSaleProduct as IEnumerable<HamiZarf.Models.sp_sp_showProdcuts_Result>)
                                {
                                    <div class="col-md-4 col-sm-4">
                                        <div class="single-product">
                                            <div class="product-img">
                                                <a href="/home/showproduct?id=@(item.Id)">
                                                    <img src="@($"data:image/jpeg;base64,{Convert.ToBase64String(item.pic)}")" alt="@item.Name" title="@item.Name" class="k">

                                                </a>
                                                <span class="tag-line">پرفروش</span>
                                                <div class="product-action">
                                                    <div class="button-top">

                                                        <a href="#"><i class="fa fa-heart"></i></a>
                                                    </div>
                                                    <div class="button-cart">
                                                        <button><i class="fa fa-shopping-cart"></i> افزودن به سبد</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="product-content">
                                                <h3><a href="/home/showproduct?id=@(item.Id)">@item.Name</a></h3>
                                                <div class="price">
                                                    <span>@item.Price تومان</span>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <!-- single-product end -->

                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="profile">
                            <div class="row shop-list">
                                <!-- single-product start -->
                                @foreach (var item in ViewBag.ShowFullSaleProduct as IEnumerable<HamiZarf.Models.sp_sp_showProdcuts_Result>)
                                {
                                    <div class="col-md-12">
                                        <div class="single-product">
                                            <div class="product-img">
                                                <a href="/home/showproduct?id=@(item.Id)">
                                                    <img src="@($"data:image/jpeg;base64,{Convert.ToBase64String(item.pic)}")" alt="@item.Name" title="@item.Name" class="kk">
                                                </a>
                                                <span class="tag-line">پرفروش</span>
                                            </div>
                                            <div class="product-content">
