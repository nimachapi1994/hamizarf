<div class="blog-area blog-full pad-60">
    <div class="container">
        <div class="row">
            <div class="blog-page-main">
           @foreach (var item in ViewBag.showBlog as IEnumerable<HamiZarf.Models.Content>)
           {
            <div class="col-md-4">
                <div class="blog-wrapper">
                    <div class="blog-img">
                        <a href="/home/showcontent?id=@(item.Id)"><img style="width:370px;height:150px" src="@($"data:image/jpg;base64,{Convert.ToBase64String(item.Pic)}")" alt="@item.Subject"></a>
                    </div>
                    <div class="blog-content">
                        <h3><a href="/home/showcontent?id=@(item.Id)">@item.Subject</a></h3>
                        <div class="blog-meta">
                        
                         
                            <span class="blog-cat">نوع: <a href="/home/showcontent?id=@(item.Id)">@item.TypeOfContent</a></span>
                        </div>
                        <p>@Html.Raw(item.Txt)</p>
                        <a class="read-more" href="/home/showcontent?id=@(item.Id)">ادامه مطلب <i class="fa fa-angle-left"></i> <i class="fa fa-angle-left"></i></a>
                    </div>
                </div>
            </div>
           }

            </div>
        </div>
     
    </div>
