
@{
    ViewBag.Title = "EditPages";
    Layout = "~/Views/Shared/lay.cshtml";
}
@section scripts{


    <script src="~/Plugins/ckeditor/ckeditor.js"></script>
}
<body id="bd">
   

  

  @foreach (var item in ViewBag.show as IEnumerable<HamiZarf.Models.AllPage>)
  {
      if (item.Id==1)
      {
           <h2>مدیریت صفحه درباره ما</h2>
      }
      if (item.Id == 2)
      {
        <h2>مدیریت صفحه پشتیبانی و فروش</h2>
      }

      if (item.Id == 3)
      {
        <h2>مدیریت صفحه راهنمای خرید</h2>
