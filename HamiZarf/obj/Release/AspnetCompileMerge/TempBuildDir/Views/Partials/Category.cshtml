






@{
        var db = new HamiZarf.Models.HamiZarfDB();
    }
    <div class="mainmenu_area">
        <div class="container">
            <div class="row">
                <div class="col-md-3 hidden-xs hidden-sm">
                    <div class="category_menu hidden-xs">
                        <div class="category_title">
                            <h3>دسته بندی</h3>
                        </div>
                        <div class="category_menu_content">

                            @foreach (var item in db.ParentCategories.ToList())
                            {
                                <ul>
                                    <li class="sub-category">
        @if (item.ChildCategories.Where(x => x.P_Cat_Id == item.Id) != null)
        {
        <li>
            <a href="/home/SearchProductByParentCategory?id=@item.Id">@item.Name</a>
            <ul class="sub-menu clearfix">
                <li class="sub-sec col-md-6">
                    <ul>
                        @foreach (var item1 in item.ChildCategories.ToList())
                        {

                        <li><a href="/home/SearchProductByChildCategory?id=@item1.Id"><i class="fa fa-angle-double-left"></i>@item1.Name</a></li>
                        }

                    </ul>
                </li>

            </ul>
        </li>
        }
        else
        {
            if (item.ChildCategories.Where(x => x.P_Cat_Id != item.Id).Count() == 0)
            {

            <li><a href="/home/SearchProductByParentCategory?id=@item.Id"><img src="img/icon/sport.jpg" alt="">@item.Name</a></li>
            }
        }




                                </ul>
                            }


                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="col-sm-9 hidden-xs">


                    <div class="mainmenu">
