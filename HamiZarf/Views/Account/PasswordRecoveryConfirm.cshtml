
<title>فراموشی رمز عبور</title>





@for (int i = 0; i < 8; i++)
{
    <br />
}

<div>
    @TempData["msgsuccess"]
</div>
<div>
    @TempData["msgdanger"]
</div>

<div class="login-area">
    <div class="container">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-md-6">
                <div class="login-content">
                    <h2 class="login-title">تغیر رمز عبور</h2>
                    <p>رمز جدید را وارد نمایید</p>
                   
                    <form action="/account/ResetPassword">
                    
                        <label>رمز عبور</label>
                        <input type="text" name="password">
                        <label>تکرار رمز عبور</label>
                        <input type="text" name="confirmpassword">
                        <input class="login-sub" type="submit" value="تغییر رمز عبور" id="btnRegister">
                    </form>
                </div>
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>
</div>

<script>
    btnRegister.onclick = function () {
        this.value='لطفا منتظر بمانید ...'
    }
 
</script>