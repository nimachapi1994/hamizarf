
@{
    Layout = "~/Views/Shared/lay.cshtml";
}
@section scripts{

   
<script src="~/Plugins/ckeditor/ckeditor.js"></script>
}
<body id="bd" >
 
    <br />
    <form action="/ContentManagment/InsertContentConfirm" method="post" enctype="multipart/form-data" class="text-center">
        <div>
            <br />
           
          

            <a href="/ContentManagment/ShowAllContentManagment" class="btn btn-info">مشاهده تمام مقاله ها</a>
            <br />
            <hr />
            <div class="alert-success">@TempData["msgsucess"]</div>
            <hr />
            <br />
            <h4 dir="rtl">اضافه کردن مقاله جدید</h4>
            <br />
            <div class="container" dir="rtl" style="margin:auto;width:100%">
                <div class="row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4 text-center">
                        <div class="form-group">

                            <input class="form-control" name="subject" />
                        </div>
                    </div>
                    <div class="col-sm-2 pull-left"><label class="pull-right">انتخاب موضوع مقاله</label></div>

                </div>
        
                <div class="row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4 text-center">
                        <div class="form-group">


                            <input type="file" id="txtimg" name="img" />
                        </div>
                    </div>
                    <div class="col-sm-2 pull-left"><label class="pull-right">انتخاب تصویر</label></div>

                </div>


                <div class="container" style="margin:auto">
                    <div class="form-group" id="divshowimg" style="margin:auto">
                        <button class="btn btn-danger btn-xs pull-right" type="button" id="btnClose">&times;</button>



                        <img style="width:300px;height:300px" id="img" />



                    </div>
                </div>




                <br />
                <div class="row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4 text-center">
                        <div class="form-group">


                            <textarea maxlength="90" style="width:100%" placeholder="حداکثر 90 کارکتر" dir="rtl" name="txt"></textarea>
                        </div>
                    </div>
                    <div class="col-sm-2 pull-left"><label>متن مقاله بصورت چند خط</label></div>

                </div>


                <div class="row">
                    <div class="col-sm-1"></div>
           
                    <div class="col-sm-9 text-center">

                        <div class="page-wrapper box-content">


                            <textarea class="content" name="MoreTxt" id="ck" dir="rtl"></textarea>

                        </div>

                    </div>
                    <div class="col-sm-2"><label class="pull-right">متن مقاله بصورت کامل </label></div>

                </div>







                <br />







             
                <br />
                <div class="col-sm-1"></div>
      
                <div class="col-sm-9 text-center">
                    <button class="btn btn-success btn-block">ثبت</button>

                </div>
                <div class="col-sm-2"></div>

            </div>

          
            </div>
            @for (int i = 0; i < 10; i++)
            {

                <br />
            }
        </div>
    </form>
    <script src="~/Plugins/MegaMenuForCategory/js/vendor/jquery-1.10.2.min.js"></script>
   <script>
       CKEDITOR.replace('ck', { filebrowserImageUploadUrl: '/ContentManagment/SendRequestImageAndBackImageUrl' })
    
   </script>

    <script>
                $(bd).html(function () {
                    $(divshowimg).hide();
                })
    </script>

    <script>
                $(txtimg).change(function () {
                    var reader = new FileReader()
                    reader.readAsDataURL(txtimg.files[0])
                    reader.onloadend = function (ex) {

                        img.src = ex.target.result;
                        $(divshowimg).show(1000)
                    }



                })

    </script>
    <script>
                $(btnClose).click(function () {
                    $(img).attr('src', '');
                    $(divshowimg).hide();
                    txtimg.value = '';

                })
    </script>
</body>


